{
  "name": "mooltipage",
  "version": "0.0.1",
  "description": "Compile-time framework for creating Multiple-Page Applications",
  "keywords": [
    "mpa",
    "web",
    "framework",
    "html"
  ],
  "author": "Christopher Koehler",
  "license": "MIT",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/lib/**/*",
    "dist/bin/**/*"
  ],
  "directories": {
    "bin": "./dist/bin",
    "lib": "./dist/lib"
  },
  "scripts": {
    "clean": "node scripts/clean.js",
    "build": "tsc -b",
    "rebuild": "npm run clean && npm run build",
    "test": "npm run build && ava",
    
    "coverage": "npm run build && nyc ava",
    "typedoc": "typedoc src/lib",
    "docs": "npm run coverage && npm run typedoc",

    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "npm run lint --fix",

    "prepare": "npm run rebuild",
    "prepublishOnly": "npm run lint-fix && npm run docs"
  },
  "bin": {
    "mooltipage": "./dist/bin/main.js"
  },
  "dependencies": {
    "htmlparser2": "^4.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "ava": "^3.10.1",
    "eslint": "^7.5.0",
    "nyc": "^15.1.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  }
}
