{
  "name": "mooltipage",
  "version": "0.0.1",
  "description": "Compile-time framework for creating Multiple-Page Applications",
  "keywords": [
    "mpa",
    "web",
    "framework",
    "html"
  ],
  "author": "Christopher Koehler",
  "license": "ISC",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/lib/**/*",
    "dist/bin/**/*"
  ],
  "directories": {
    "bin": "./dist/bin",
    "lib": "./dist/lib"
  },
  "scripts": {
    "build": "tsc -b",
    "test": "npm run build && node dist/test/runTests.js",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "npm run lint --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint-fix && node dist/test/runTests.js"
  },
  "bin": {
    "mooltipage": "./dist/bin/main.js"
  },
  "dependencies": {
    "domhandler": "^3.0.0",
    "domutils": "^2.1.0",
    "htmlparser2": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^3.9.3"
  }
}
