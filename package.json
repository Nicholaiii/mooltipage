{
  "name": "mooltipage",
  "version": "0.0.1",
  "description": "Compile-time framework for creating Multiple-Page Applications",
  "keywords": [
    "mpa",
    "web",
    "framework",
    "html"
  ],
  "author": "Christopher Koehler",
  "license": "MIT",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/lib/**/*",
    "dist/bin/**/*"
  ],
  "directories": {
    "bin": "./dist/bin",
    "lib": "./dist/lib"
  },
  "scripts": {
    "clean": "node scripts/clean.js",
    "build": "tsc -b",
    "rebuild": "npm run clean && npm run build",
    "test": "npm run build && ava",
    "coverage": "npm run build && nyc ava",
    "typedoc": "typedoc src/lib",
    "docs": "npm run rebuild && npm run coverage && npm run typedoc && node ./dist/bin/main.js --inPath=./docs/src --outPath=./docs/gen --formatter=minimized ./docs/src/index.html",
    "lint": "eslint --ext .js,.ts src",
    "lint-fix": "npm run lint -- --fix",
    "lint-full": "npm run lint -- --no-eslintrc --config .eslintrc-full.json",
    "lint-full-fix": "npm run lint-fix -- --no-eslintrc --config .eslintrc-full.json",
    "prepublishOnly": "npm run rebuild && npm run lint-full && npm run docs",
    "debugtest": "ava --serial --timeout=60m --verbose"
  },
  "bin": {
    "mooltipage": "./dist/bin/main.js"
  },
  "dependencies": {
    "htmlparser2": "^4.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "ava": "^3.11.1",
    "eslint": "^7.6.0",
    "nyc": "^15.1.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  }
}
